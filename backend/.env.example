# ==========================================
# Can-It-WFC Backend Environment Variables
# ==========================================
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env to git (it's in .gitignore)

# ==========================================
# Django Core Settings
# ==========================================

# Set to False in production
DEBUG=True

# Generate a secure key using:
# python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
# Or use: python3 -c "import secrets; print(''.join(secrets.choice('abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789!@#$%^&*(-_=+)') for i in range(50)))"
SECRET_KEY=your-secret-key-here-generate-a-new-one

# Comma-separated list of allowed hosts
# Development:
ALLOWED_HOSTS=localhost,127.0.0.1
# Production example:
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,your-backend.fly.dev

# ==========================================
# Database
# ==========================================

# PostgreSQL connection string
# Local example:
DATABASE_URL=postgresql://username:password@localhost:5432/can_it_wfc_dev

# Supabase example (recommended for production):
# DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# ==========================================
# CORS (Frontend URLs)
# ==========================================

# Comma-separated list of allowed origins
# Development:
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Production with GitHub Pages example:
# CORS_ALLOWED_ORIGINS=https://yourusername.github.io

# ==========================================
# External APIs
# ==========================================

# Google Places API Key
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_PLACES_API_KEY=your-google-places-api-key

# Google Places Configuration (optional)
GOOGLE_PLACES_MAX_RESULTS=60
GOOGLE_PLACES_ENABLE_PAGINATION=True
GOOGLE_PLACES_TIMEOUT=10

# ==========================================
# Authentication (Google OAuth)
# ==========================================

# Google OAuth credentials for social login
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your-google-oauth-client-secret

# ==========================================
# Anti-Spam Settings (optional)
# ==========================================

# Minimum account age in hours before user can create reviews
MIN_ACCOUNT_AGE_HOURS=0

# Maximum reviews per day per user
MAX_REVIEWS_PER_DAY=10

# ==========================================
# Supabase (optional - if using Supabase features)
# ==========================================

# Supabase project URL
# SUPABASE_URL=https://your-project-ref.supabase.co

# Supabase anonymous key
# SUPABASE_ANON_KEY=your-supabase-anon-key

# ==========================================
# Error Monitoring (optional but recommended)
# ==========================================

# Sentry DSN for error tracking
# Get from: https://sentry.io
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Release version for tracking
# RELEASE_VERSION=1.0.0

# ==========================================
# Security Settings for Production
# ==========================================

# Uncomment these for production deployment:
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True
